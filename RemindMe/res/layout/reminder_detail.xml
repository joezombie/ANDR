<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <EditText
        android:hint="Name"
        android:inputType="text"
        android:id="@+id/reminder_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/select_location"
        android:text="Location"
        android:onClick="selectLocation"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <TextView
        android:id="@+id/reminder_location_uuid"
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ToggleButton
            android:id="@+id/reminder_active"
            android:layout_gravity="center"
            android:textOn="Active"
            android:textOff="Inactive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ToggleButton
            android:id="@+id/reminder_arriving"
            android:layout_gravity="center"
            android:textOn="Arriving"
            android:textOff="Arriving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ToggleButton
            android:id="@+id/reminder_leaving"
            android:layout_gravity="center"
            android:textOn="Leaving"
            android:textOff="Leaving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ToggleButton
            android:id="@+id/reminder_repeat"
            android:layout_gravity="center"
            android:textOn="Repeat"
            android:textOff="Once"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <EditText
        android:hint="Message"
        android:id="@+id/reminder_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:text="Save"
            android:onClick="saveReminder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <Button
            android:text="Delete"
            android:onClick="removeReminder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:text="Cancel"
            android:onClick="cancelReminderEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        </LinearLayout>
</LinearLayout>